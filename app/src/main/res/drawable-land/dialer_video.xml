<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <layer-list>
            <item android:drawable="@drawable/light_grey_right_rounded_rect" android:height="64dp" android:width="134dp" android:gravity="center"/>

            <item android:width="48dp" android:height="48dp" android:gravity="center">
                <bitmap android:src="@drawable/ic_dialpad_call_video" android:gravity="center"/>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="false">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:drawable="@drawable/transparent_cicle"
                android:height="134dp" android:width="64dp" android:gravity="fill_horizontal"
                />
            <item android:width="48dp" android:height="48dp" android:gravity="center">
                <bitmap android:src="@drawable/ic_dialpad_call_video"  android:alpha="0.5" android:gravity="center"/>
            </item>
        </layer-list>
    </item>
</selector>