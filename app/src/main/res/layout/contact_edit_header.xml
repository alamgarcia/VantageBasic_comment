<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contact_edit"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/margin_normal"
    android:orientation="vertical"
    android:paddingBottom="1dp"
    android:paddingLeft="1dp"
    android:paddingRight="1dp">

    <RelativeLayout
        android:id="@+id/contact_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_xlarge">

        <TextView
            android:id="@+id/contact_edit_contact_image"
            style="@style/initials_contact_detailes_text_style"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/ic_avatar_generic105"
            android:gravity="center" />

        <FrameLayout
            android:id="@+id/edit_first_name_frame"
            android:layout_width="319dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/contact_edit_contact_image">

            <EditText
                android:id="@+id/contact_edit_first_name"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/margin_large"
                android:background="@android:color/transparent"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:hint="@string/contact_edit_first_name_hint"
                android:imeOptions="actionDone"
                android:inputType="textCapSentences"
                android:letterSpacing="0"
                android:singleLine="true"
                android:textColor="@color/primary"
                android:textSize="@dimen/contact_edit_name_text_size"
                tools:ignore="Deprecated" />

            <ImageView
                android:id="@+id/contact_edit_first_name_clear"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end|center_vertical"
                android:src="@drawable/ic_clear_field"
                android:visibility="invisible"
                android:contentDescription="@string/first_name_clear_description" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/edit_last_name_frame"
            android:layout_width="319dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_first_name_frame"
            android:layout_marginBottom="@dimen/margin_normal"
            android:layout_toEndOf="@id/contact_edit_contact_image">

            <EditText
                android:id="@+id/contact_edit_last_name"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/margin_large"
                android:background="@android:color/transparent"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:hint="@string/contact_edit_last_name_hint"
                android:imeOptions="actionDone"
                android:inputType="textCapSentences"
                android:letterSpacing="0"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/primary"
                android:textSize="@dimen/contact_edit_name_text_size"
                tools:ignore="Deprecated" />

            <ImageView
                android:id="@+id/contact_edit_last_name_clear"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end|center_vertical"
                android:src="@drawable/ic_clear_field"
                android:visibility="invisible"
                android:contentDescription="@string/edit_clear_last_name_description"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/edit_job_title_frame"
            android:layout_width="319dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_last_name_frame"
            android:layout_toEndOf="@id/contact_edit_contact_image">

            <EditText
                android:id="@+id/contact_edit_job_title"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/margin_large"
                android:background="@android:color/transparent"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:hint="@string/contact_edit_job_title_hint"
                android:imeOptions="actionDone"
                android:inputType="textCapSentences"
                android:letterSpacing="0"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/primary"
                android:textSize="@dimen/contact_edit_other_text_size"
                tools:ignore="Deprecated" />

            <ImageView
                android:id="@+id/contact_edit_job_title_clear"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end|center_vertical"
                android:src="@drawable/ic_clear_field"
                android:visibility="invisible"
                android:contentDescription="@string/edit_job_title_clear_description"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/edit_company_frame"
            android:layout_width="319dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_job_title_frame"
            android:layout_toEndOf="@id/contact_edit_contact_image">

            <EditText
                android:id="@+id/contact_edit_company"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/margin_large"
                android:background="@android:color/transparent"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:hint="@string/contact_edit_company_hint"
                android:imeOptions="actionDone"
                android:inputType="textCapSentences"
                android:letterSpacing="0"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/primary"
                android:textSize="@dimen/contact_edit_other_text_size"
                tools:ignore="Deprecated" />

            <ImageView
                android:id="@+id/contact_edit_company_clear"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end|center_vertical"
                android:src="@drawable/ic_clear_field"
                android:visibility="invisible"
                tools:ignore="ContentDescription" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/edit_address_frame"
            android:layout_width="319dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_company_frame"
            android:layout_toEndOf="@id/contact_edit_contact_image">

            <EditText
                android:id="@+id/contact_edit_address"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/margin_large"
                android:background="@android:color/transparent"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:hint="@string/contact_edit_address_hint"
                android:imeOptions="actionDone"
                android:inputType="textCapSentences"
                android:letterSpacing="0"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/primary"
                android:textSize="@dimen/contact_edit_other_text_size"
                tools:ignore="Deprecated" />

            <ImageView
                android:id="@+id/contact_edit_address_clear"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end|center_vertical"
                android:src="@drawable/ic_clear_field"
                android:visibility="invisible"
                tools:ignore="ContentDescription" />
        </FrameLayout>

        <ImageView
            android:id="@+id/contact_edit_contact_favorite"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_toEndOf="@id/edit_first_name_frame"
            android:contentDescription="@string/add_favorite_content_description"
            android:src="@drawable/ic_favorites_selected" />
    </RelativeLayout>

    <View
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_normal"
        android:background="@color/blackStroke" />

    <LinearLayout
        android:id="@+id/add_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/margin_normal"
        android:paddingStart="@dimen/margin_normal"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="16dp"
            android:src="@drawable/ic_contact_details_add"
            tools:ignore="ContentDescription" />

        <TextView
            style="@style/Headline"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:text="@string/contact_edit_add_number"
            android:textColor="@color/secondary" />
    </LinearLayout>
</LinearLayout>