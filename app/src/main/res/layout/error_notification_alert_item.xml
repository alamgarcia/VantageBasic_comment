<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:layout_marginEnd="12dp"
    android:layout_marginStart="12dp"
    android:layout_marginTop="6dp"
    android:background="@color/colorStatusBG"
    android:paddingBottom="6dp"
    android:paddingEnd="8dp"
    android:paddingStart="12dp"
    android:paddingTop="6dp">

    <ImageView
        android:id="@+id/error_notification_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_topbar_error"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/error_notification_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/error_notification_image"
        android:textColor="@color/primary" />

    <TextView
        android:id="@+id/error_notification_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/error_notification_title"
        android:layout_toEndOf="@+id/error_notification_image"
        android:textColor="@color/secondary" />
</RelativeLayout>