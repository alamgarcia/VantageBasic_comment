<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:width="48dp" android:height="48dp" android:gravity="center">
                <bitmap android:src="@drawable/ic_dialpad_redial" android:gravity="center"/>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="false">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:drawable="@drawable/transparent_cicle"
                android:height="64dp" android:width="64dp" android:gravity="center"
                />

            <item android:width="48dp" android:height="48dp" android:gravity="center">
                <bitmap android:src="@drawable/ic_dialpad_redial"  android:alpha="0.5" android:gravity="center"/>
            </item>
        </layer-list>
    </item>
</selector>