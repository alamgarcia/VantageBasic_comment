<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <layer-list>
            <item android:drawable="@drawable/light_grey_left_rounded_rect" android:gravity="fill_horizontal" android:width="154dp" android:height="64dp"/>
            <item android:width="48dp" android:height="48dp" android:gravity="center">
                <bitmap android:src="@drawable/ic_dialpad_call_audio" android:gravity="center"/>
            </item>
        </layer-list>
    </item>

    <item android:state_enabled="false">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:drawable="@drawable/transparent_cicle"
                android:height="154dp" android:width="64dp" android:gravity="fill_horizontal"
                />
            <item android:width="48dp" android:height="48dp" android:gravity="center">
                <bitmap android:src="@drawable/ic_dialpad_call_audio"  android:alpha="0.5" android:gravity="center"/>
            </item>
        </layer-list>
    </item>
</selector>